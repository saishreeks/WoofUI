<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle" android:dither="true">
            <corners android:radius="2dp" />
            <solid android:color="#f4f3f3" />

        </shape>
    </item>
    <item android:top="3dp">

        <shape android:shape="rectangle" android:dither="true">
            <corners android:radius="2dp" />
            <solid android:color="@color/textSelected" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                />
        </shape>
    </item>
</layer-list>